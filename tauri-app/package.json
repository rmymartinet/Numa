{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "format": "prettier --write . && eslint --fix .",
    "format:check": "prettier --check . && eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:html": "vitest run --coverage --reporter=html",
    "test:ui": "vitest --ui",
    "test:rust": "cd src-tauri && cargo test --all --locked",
    "test:rust:clippy": "cd src-tauri && cargo clippy -- -W clippy::pedantic -A clippy::uninlined-format-args -A clippy::unused-imports -A clippy::dead-code -A clippy::unused-must-use -A clippy::unexpected-cfgs",
    "test:all": "npm run test:rust:clippy && npm run test:rust && npm run test:coverage",
    "lint": "eslint src/ --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "optimize": "./optimize-assets.sh",
    "tauri:dev": "tauri dev",
    "tauri:dev:debug": "tauri dev --features debug",
    "tauri:dev:stealth": "tauri dev --features stealth_macos",
    "tauri:build": "tauri build",
    "tauri:build:dev": "tauri build --features dev",
    "tauri:build:debug": "tauri build --features debug",
    "tauri:build:stealth": "tauri build --features stealth_macos",
    "cargo:dev": "cd src-tauri && cargo build --features dev",
    "cargo:debug": "cd src-tauri && cargo build --features debug",
    "cargo:stealth": "cd src-tauri && cargo build --features stealth_macos",
    "cargo:prod": "cd src-tauri && cargo build --release",
    "cargo:secure": "cd src-tauri && cargo build --release --no-default-features --features secure",
    "cargo:test:dev": "cd src-tauri && cargo test --features dev",
    "cargo:test:debug": "cd src-tauri && cargo test --features debug"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/react": "^10.2.0",
    "@sentry/replay": "^7.116.0",
    "@sentry/tracing": "^7.120.4",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-store": "^2.3.0",
    "framer-motion": "^12.23.12",
    "liquid-glass-react": "^1.1.1",
    "lucide-react": "^0.536.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "tailwindcss": "^4.1.11",
    "tesseract.js": "^6.0.1",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "svgo": "^4.0.0",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.2.4"
  }
}
