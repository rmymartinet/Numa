{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-app",
  "version": "0.1.0",
  "identifier": "com.martinet.veil",
                "build": {
                "beforeDevCommand": "",
                "devUrl": "http://localhost:1420/hud",
                "beforeBuildCommand": "npm run build",
                "frontendDist": "../dist"
              },
    "app": {
                    "windows": [
                  {
                    "title": "Numa - AI Assistant",
                    "label": "hud",
                    "width": 1100,
                    "height": 800,
                    "resizable": true,
                    "decorations": false,
                    "minimizable": true,
                    "transparent": true,
                    "alwaysOnTop": true,
                    "skipTaskbar": false,
                    "visible": true,
                    "center": true,
                    "closable": true
                  }
                ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
